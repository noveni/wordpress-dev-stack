    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/wp-core",
                "/var/www/html/wp-content/themes/THEMENAME": "${workspaceFolder}/THEMENAME",
                "/var/www/html/wp-content/plugins": "${workspaceFolder}/plugins",
            },
            "xdebugSettings": {
                "max_data": 65535,
                "show_hidden": 1,
                "max_children": 100,
                "max_depth": 5
            }
        },
    ]
}
